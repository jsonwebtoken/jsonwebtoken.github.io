      {block}

  else if point == "desktop"
    @media (min-width: 992px)
      {block}

  else if point == "desktop-big"
    @media (min-width: 1280px)
      {block}

  else if point == "retina-only"
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
      {block}

  else
    @media (point: value)
      {block}



